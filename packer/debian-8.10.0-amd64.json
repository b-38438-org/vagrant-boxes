{
    "variables": {
        "PACKER_OS_FLAVOUR": "debian",
        "PACKER_OS_RELEASE": "jessie",
        "PACKER_BOX_NAME": "debian-8.10.0-amd64",
        "AWS_ACCESS_KEY_ID": "{{env `AWS_ACCESS_KEY_ID`}}",
        "AWS_SECRET_ACCESS_KEY": "{{env `AWS_SECRET_ACCESS_KEY`}}",
        "PACKER_ATLAS_TOKEN": "{{env `PACKER_ATLAS_TOKEN`}}",
        "PACKER_ATLAS_VERSION": "",
        "DISK_SIZE": "25140"
    },
    "builders": [
        {
            "type": "virtualbox-iso",
            "boot_command": [
                "<esc><wait>",
                "install <wait>",
                "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `PACKER_BOX_NAME` }}/preseed.cfg <wait>",
                "debian-installer=en_US <wait>",
                "auto <wait>",
                "locale=en_US <wait>",
                "kbd-chooser/method=us <wait>",
                "keyboard-configuration/xkb-keymap=us <wait>",
                "netcfg/get_hostname={{ .Name }} <wait>",
                "netcfg/get_domain=vagrantup.com <wait>",
                "fb=false <wait>",
                "debconf/frontend=noninteractive <wait>",
                "console-setup/ask_detect=false <wait>",
                "console-keymaps-at/keymap=us <wait>",
                "<enter><wait>"
            ],
            "boot_wait": "10s",
            "headless": true,
            "disk_size": "{{ user `DISK_SIZE` }}",
            "guest_os_type": "Debian_64",
            "http_directory": "http",
            "iso_checksum": "367f99ede326de69f1e434aa6e9e5517a3437ee1239bba76dd0d53c3cb912507c660b684ed41d7ef80fbe93d2099ae1d3209bfca5df3dd90b1b5a486ce9c1369",
            "iso_checksum_type": "sha512",
            "iso_url": "https://cdimage.debian.org/mirror/cdimage/archive/8.10.0/amd64/iso-cd/{{ user `PACKER_BOX_NAME` }}-netinst.iso",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -hP now",
            "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
            "virtualbox_version_file": ".vbox_version",
            "vm_name": "{{ user `PACKER_BOX_NAME` }}",
            "vboxmanage": [
                [ "modifyvm", "{{.Name}}", "--memory", "1024" ],
                [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
            ]
        },
        {
            "type": "vmware-iso",
            "boot_command": [
                "<esc><wait>",
                "install <wait>",
                "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `PACKER_BOX_NAME` }}/preseed.cfg <wait>",
                "debian-installer=en_US <wait>",
                "auto <wait>",
                "locale=en_US <wait>",
                "kbd-chooser/method=us <wait>",
                "keyboard-configuration/xkb-keymap=us <wait>",
                "netcfg/get_hostname={{ .Name }} <wait>",
                "netcfg/get_domain=vagrantup.com <wait>",
                "fb=false <wait>",
                "debconf/frontend=noninteractive <wait>",
                "console-setup/ask_detect=false <wait>",
                "console-keymaps-at/keymap=us <wait>",
                "<enter><wait>"
            ],
            "boot_wait": "10s",
            "headless": true,
            "disk_size": "{{ user `DISK_SIZE` }}",
            "guest_os_type": "debian7-64",
            "http_directory": "http",
            "iso_checksum": "367f99ede326de69f1e434aa6e9e5517a3437ee1239bba76dd0d53c3cb912507c660b684ed41d7ef80fbe93d2099ae1d3209bfca5df3dd90b1b5a486ce9c1369",
            "iso_checksum_type": "sha512",
            "iso_url": "https://cdimage.debian.org/mirror/cdimage/archive/8.10.0/amd64/iso-cd/{{ user `PACKER_BOX_NAME` }}-netinst.iso",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -hP now",
            "tools_upload_flavor": "linux",
            "vm_name": "{{ user `PACKER_BOX_NAME` }}",
            "vmx_data": {
                "memsize": "1024",
                "numvcpus": "2",
                "cpuid.coresPerSocket": "1"
            }
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash -eux '{{.Path}}'",
            "scripts": [
                "scripts/update.sh",
                "scripts/sshd.sh",
                "scripts/sshd-debian.sh",
                "scripts/networking.sh",
                "scripts/sudoers.sh",
                "scripts/vagrant.sh",
                "scripts/vmtools.sh",
                "scripts/ruby.sh",
                "scripts/chef.sh",
                "scripts/filesystem.sh",
                "scripts/cleanup.sh"
            ]
        }
    ],
    "post-processors": [
        [
            {
                "type": "vagrant",
                "compression_level": 9,
                "output": "../builds/{{.Provider}}/{{ user `PACKER_BOX_NAME` }}_{{.Provider}}.box"
            },
            {
                "type": "checksum",
                "checksum_types": ["sha256","sha512"],
                "output": "../builds/CHECKSUMS"
            },
            {
                "type": "manifest",
                "output": "../builds/{{ user `PACKER_BOX_NAME` }}.manifest.json",
                "strip_path": true
            }
        ]
    ]
}